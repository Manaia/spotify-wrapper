{
  "name": "spotify-w",
  "version": "1.0.5",
  "description": "A wrapper to work with the Spotify Web API.",
  "main": "lib/index.js",
  "scripts": {
    "clear": "rimraf lib",
    "pre-build": "./node_modules/.bin/babel --out-dir lib src",
    "build": "npm run clear && npm run pre-build",
    "build:watch": "npm run clear && npm run pre-build -- --watch",
    "build:umd": "./node_modules/.bin/webpack --output-filename spotify-wrapper.umd.js",
    "build:umd:min": "./node_modules/.bin/webpack --output-filename spotify-wrapper.umd.min.js -p",
    "build:all": "npm run build && npm run build:umd && npm run build:umd:min",
    "lint": "./node_modules/.bin/eslint src/*.js",
    "prepush": "echo inserir o comando npm run lint nesse script ARTHUR!",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register",
    "test:tdd": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register --watch",
    "test:coverage": "nyc npm test",
    "coveralls": "npm run test:coverage && nyc report --reporter=text-lcov | coveralls"
  },
  "files": [
    "dist",
    "lib"
  ],
  "nyc": {
    "functions": 80,
    "lines": 80,
    "check-coverage": true,
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Manaia/spotify-wrapper.git"
  },
  "keywords": [
    "javascript",
    "tdd",
    "js",
    "library"
  ],
  "author": "Arthur Manaia <arthurnovais7@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Manaia/spotify-wrapper/issues"
  },
  "homepage": "https://github.com/Manaia/spotify-wrapper#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "coveralls": "^3.0.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^0.14.3",
    "mocha": "^5.2.0",
    "node-fetch": "^2.2.0",
    "nyc": "^11.9.0",
    "rimraf": "^2.6.2",
    "sinon": "^4.5.0",
    "sinon-chai": "^3.2.0",
    "sinon-stub-promise": "^4.0.0",
    "webpack": "^4.19.1",
    "webpack-cli": "^3.1.0"
  }
}
